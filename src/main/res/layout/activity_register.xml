<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActivity"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:id="@+id/img_login"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/ic_person_add_black_24dp"
        android:tint="@color/colorPrimaryDark"


        />
    <EditText
        android:id="@+id/edit_name_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textSize="25dp"
        android:drawableLeft="@drawable/ic_account_circle_black_24dp"
        android:layout_marginTop="15dp"
        android:drawableTint="@color/colorPrimaryDark"
        android:drawablePadding="4dp"
        />
    <EditText
        android:id="@+id/edit_email_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textSize="25dp"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:layout_marginTop="15dp"
        android:drawableTint="@color/colorPrimaryDark"
        android:drawablePadding="4dp"
        />
    <EditText
        android:id="@+id/edit_Login_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Login"
        android:textSize="25dp"
        android:drawableLeft="@drawable/ic_account_circle_black_24dp"
        android:layout_marginTop="15dp"
        android:drawableTint="@color/colorPrimaryDark"
        android:drawablePadding="4dp"
        />
    <EditText
        android:id="@+id/edit_password_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/login_editpassword_hint"
        android:textSize="25dp"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/ic_password_24dp"
        android:layout_marginTop="15dp"
        android:drawableTint="@color/colorPrimaryDark"
        android:drawablePadding="4dp"

        />
    <Button
        android:id="@+id/btn_register_register"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        android:text="Register"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimaryDark" />







</LinearLayout>