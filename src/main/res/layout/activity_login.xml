<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity"
    android:orientation="vertical"
    android:padding="30dp">

    <ImageView
        android:id="@+id/img_login"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#F6F3F3"
        android:scaleType="centerInside"
        android:tint="@android:color/black"
        app:srcCompat="@drawable/avatar_default"
        tools:srcCompat="@drawable/avatar_default" />

    <EditText
        android:id="@+id/edit_login_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/input_margin"
        android:drawableLeft="@drawable/ic_account_circle_black_24dp"
        android:drawablePadding="4dp"
        android:hint="@string/login_editlog_hint"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/edit_password_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/login_editpassword_hint"
        android:textSize="30sp"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/ic_password_24dp"
        android:layout_marginTop="@dimen/input_margin"
        android:drawablePadding="4dp"
        />
    


    <ImageButton
        android:id="@+id/btn_signin_login"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="223dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/input_margin"
        android:src="@drawable/startbutton" />

    <TextView
        android:id="@+id/txt_register_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_txtregister_text"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#EC0707"
        android:layout_gravity="center"
        />
</LinearLayout>